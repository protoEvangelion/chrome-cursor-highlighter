{
  "name": "Cursor Highlighter",
  "description": "Highlight cursor with yellow circle",
  "version": "2.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "libs/jquery-1.12.0.min.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "highlight.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "<all_urls>",
    "https://*/*",
    "http://*/*"
  ],
  "browser_action": {
    "default_title": "Highlight Cursor"
  },
  "manifest_version": 2
}